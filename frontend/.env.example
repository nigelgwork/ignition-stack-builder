# IIoT Stack Builder - Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# ===================================
# API Configuration
# ===================================
# Use relative path for production (served through nginx proxy)
VITE_API_URL=/api

# For local development, you can use:
# VITE_API_URL=http://localhost:8000

# ===================================
# Application Settings
# ===================================
VITE_APP_NAME=IIoT Stack Builder
VITE_APP_VERSION=1.0.0

# ===================================
# Authentication
# ===================================
# Token storage location: localStorage or sessionStorage
VITE_TOKEN_STORAGE=localStorage

# ===================================
# Feature Flags
# ===================================
VITE_ENABLE_MFA=true
VITE_ENABLE_STACK_SHARING=false
VITE_ENABLE_ANALYTICS=false

# ===================================
# Environment
# ===================================
VITE_ENV=production  # development, staging, production
