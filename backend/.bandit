[bandit]
# Exclude test directories
exclude = /tests/,./migrations/

# Skip specific tests that are false positives in our context
skips = B105,B106,B107

# B105: Possible hardcoded password (false positives in config generation templates)
# B106: Possible hardcoded password in function arguments (config defaults)
# B107: Possible hardcoded password in function default (config defaults)
