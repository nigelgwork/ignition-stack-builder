# IIoT Stack Builder - Root Environment Variables
# Copy this file to .env for docker-compose

# ===================================
# Stack Builder Services
# ===================================
COMPOSE_PROJECT_NAME=stack-builder

# Frontend
FRONTEND_PORT=3500                    # HTTP port (default: 3500 for dev, 80 for production)
FRONTEND_HTTPS_PORT=3443              # HTTPS port (default: 3443 for dev, 443 for production)

# Backend
BACKEND_PORT=8000

# ===================================
# Authentication Database
# ===================================
AUTH_DB_PORT=5433
AUTH_DB_NAME=stack_builder_auth
AUTH_DB_USER=stack_builder
AUTH_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_VERSION=16-alpine

# ===================================
# Redis (Session/Token Cache)
# ===================================
REDIS_PORT=6379
REDIS_VERSION=7-alpine

# ===================================
# Timezone
# ===================================
TZ=Australia/Adelaide
